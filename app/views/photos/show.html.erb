    <% photo_likes.each do |a_liked_photo| %>

    <!-- bring fans/likes from table to pull user names for likes -->
    <% fan = User.where({ :id => a_liked_photo.fan_id }).at(0) %>
        <%= fan.username %>
      <% end %>
      </dd>
    </dl>
  </div>
</div>

